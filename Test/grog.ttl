      [ arm:traitClass armr:singleweapon ;  arm:addedXP 50 ; arm:hasSpeciality "Axe"  ],
      [ arm:traitClass armr:thrown ;  arm:addedXP 30 ; arm:hasSpeciality "Axe"  ],
