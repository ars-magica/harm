   [ arm:traitClass armr:stealth ; arm:hasSpeciality "Woodlands" ;  arm:addedXP 15  ],
   [ arm:traitClass armr:survival ; arm:hasSpeciality "Woodlands" ; arm:addedXP 15  ] .

